@import "../../colors"

.product
    display flex
    font-size 1.6rem
    margin 2.4rem 0.8rem 0 0.8rem
    color $nav
    padding-bottom 1.2rem
    border-bottom 1px solid $ctaBorder
    position relative

    div
        flex 1 0

    & div:not(:first-child)
        text-align end
    & div:last-child::before
        content "NT. "
    
    button
        position absolute
        left calc(271px * 3 + 10px)