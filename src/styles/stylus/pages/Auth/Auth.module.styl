@import "../../colors"

.auth
    height 70vh

.auth-container
    width 40rem
    margin 8rem auto 0 auto
    border 1px solid $ctaBorder
    display flex
    flex-direction column

    h2
        text-align center
        font-size 2.4rem

    form
        display flex
        flex-direction column
        padding 0 2.4rem

        button
            margin 2.4rem 0 6.4rem 0
            font-size 1.6rem
            width auto
            align-self center

.switch-to-registry
    align-self center
    margin-bottom 1.2rem

    span
        font-size 1.4rem
