.featured
    margin-bottom 9.6rem

.featured-title
    font-size 3.6rem
    text-align center

.featured-carousel 
    display flex
    font-size 1.6rem
    align-items: center

.featured-carousel__left-arrow,
.featured-carousel__right-arrow
    width 5rem
    height 5rem
    position relative

    & svg
        width 2.4rem
        height 2.4rem
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

.carousel
    overflow hidden

.carousel__products
    display flex
    width 110rem
    list-style none
    padding 0
    gap 2.5rem
    transition all 0.3s
    