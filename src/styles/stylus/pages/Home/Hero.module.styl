@import '../../colors'

.hero
  display flex
  justify-content space-between
  // gap 8rem
  align-items center
  margin-top 3.2rem

.hero-intro
  display flex
  flex-direction column
  gap 2.4rem
  padding 2.4rem 3.2rem 0 3.2rem
  background $primary
  width 40%
  height 40rem

.hero-intro__title
  font-size 8.6rem
  line-height 1
  letter-spacing -2px

  & span
    font-size 9.8rem

.hero-intro__content
  font-size 1.6rem
  line-height 1.6

.hero-intro__cta
  font-size 1.6rem

.hero-img
  background grey
  width 45%
  height 60rem

.arrow
  width 2.4rem