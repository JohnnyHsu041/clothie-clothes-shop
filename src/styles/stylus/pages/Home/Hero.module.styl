@import '../../colors'

.hero
  display flex
  justify-content space-around
  align-items center

.hero-intro
  display flex
  flex-direction column
  gap 2.4rem
  padding 2.4rem 3.2rem 0 3.2rem
  background $primary
  width 30%
  height 25rem

  a 
    text-align center
    font-size 1.6rem
    text-decoration-line underline
    margin-top 4.8rem

.hero-intro__title
  line-height 1
  letter-spacing -2px
  z-index 2

  p
    font-size 9.8rem

  span
    font-size 9.8rem

.hero-img
  background grey
  width 45%
  height 65rem
  
  img
    width 100%
    height 100%
    object-fit cover

.arrow
  width 2.4rem

@media (max-width 48em)
  .hero
    gap 4.4rem
  .hero-intro
    height 20rem
  .hero-intro__title
    p
      font-size 7.4rem
    span
      font-size 7.4rem
  .hero-img
    width 50%
    height 50rem

@media (max-width 27em)
  .hero
    display grid
    grid-template-columns 1fr
  .hero-intro
    width 45%
    justify-self center
  .hero-intro__title
    span
      font-size 6.2rem
    p
      font-size 6.2rem
  .hero-img
    width 100%