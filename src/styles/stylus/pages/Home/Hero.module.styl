@import '../../colors'

.hero
  display flex
  justify-content space-around
  align-items center

.hero-intro
  display flex
  flex-direction column
  gap 2.4rem
  padding 2.4rem 3.2rem 0 3.2rem
  background $primary
  width 30%
  height 25rem

  a 
    text-align center
    font-size 1.6rem
    text-decoration-line underline
    margin-top 4.8rem

.hero-intro__title
  font-size 8.6rem
  line-height 1
  letter-spacing -2px

  p
    font-size 9.8rem

  span
    font-size 9.8rem

.hero-img
  background grey
  width 45%
  height 65rem
  
  img
    width 100%
    height 100%
    object-fit cover

.arrow
  width 2.4rem