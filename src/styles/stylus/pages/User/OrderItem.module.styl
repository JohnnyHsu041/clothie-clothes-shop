.order-item
    display flex
    width 100%
    min-height 5rem

    div, button
        display flex
        justify-content center
        align-items center
        width 15rem
    
    & div:nth-child(2)
        flex-grow 2
    
    & button:hover, & button:active
        text-decoration-line underline

.order-item__content
    list-style none
    