@import "../../colors"

.order
    width 120rem
    margin 3.2rem auto 12.8rem auto

    h2 
        font-size 3rem
        text-align center

.steps
    display flex
    justify-content space-evenly
    font-size 1.4rem
    margin-top 6.4rem
    margin-bottom 8rem

.step-line
    border-top 1px solid $ctaBorder
    width 25rem
    margin-top 1.2rem

.address, .delivery, .payment
    color $ctaBorder

.focused
    color black

.order-info
    display grid
    grid-template-columns 55fr 45fr
    // border 1px solid black 

.buyer-info-container
    margin 6.4rem 8rem 2.4rem 8rem

.infos
    margin-bottom 12.8rem
    padding 0 4.8rem 8rem 4.8rem
    border 1px solid black

.step-buttons
    display flex
    justify-content space-between

.prev
    button
        width 12rem
        padding 0.8rem 0
        span 
            font-size 1.4rem
        &:hover
            background-color #161616
            color $ctaBorder

.next
    button
        width 15rem
        padding 0.8rem 0
        background-color $primary
        color #161616
        span
            font-size 1.4rem
        &:hover
            background-color $shade
            color black

.overview-container
    border-left 1px solid $ctaBorder
    margin 2.4rem 0