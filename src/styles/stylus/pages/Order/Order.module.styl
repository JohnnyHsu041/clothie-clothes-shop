@import "../../colors"

.order
    width 120rem
    margin 3.2rem auto 12.8rem auto

    h2 
        font-size 3rem
        text-align center

.order-info
    display grid
    grid-template-columns 55fr 45fr

.buyer-info-container
    margin 6.4rem 8rem 2.4rem 8rem

.overview-container
    border-left 1px solid $ctaBorder
    margin 2.4rem 0

.infos
    margin-bottom 12.8rem
    padding 0 4.8rem 8rem 4.8rem
    border 1px solid black

.step-buttons
    display flex
    justify-content space-between

.prev
    div
        width 12rem
        text-align center
        cursor pointer
        padding 0.8rem 0
        &:hover
            background-color #161616
            color $ctaBorder
    span 
        font-size 1.4rem

.next
    div
        width 15rem
        text-align center
        cursor pointer
        padding 0.8rem 0
        background-color $primary
        color #161616
        &:hover
            background-color $shade
            color black
    span
        font-size 1.4rem

.check
    button
        transform scale(1.1)
        width 15rem
        padding 0.8rem 0
        background-color $primary
        color #161616
        &:hover
            background-color $shade
            color black
    span
        font-size 1.4rem
        font-weight 600
    
    &.disabled
        button
            background-color $ctaBorder
            color $nav

@media (max-width 66em)
    .order
        width 100rem
