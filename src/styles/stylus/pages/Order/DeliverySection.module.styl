@import '../../colors'

.delivery
    h3
        font-size 2rem
        text-align center
        margin-bottom 3.2rem

.delivery__options
    display flex
    flex-direction column
    gap 1.6rem

.standard, .express
    position relative
    width 100%
    border 1px solid $ctaBorder
    display flex
    gap 1.2rem
    padding 0.8rem 0
    border-radius 4px

    input
        cursor pointer
        width 1.6rem
        height 1.6rem
        margin 1.6rem

        &:checked::after
            content ""
            position absolute
            border 1px solid black
            border-radius 4px
            top -1px
            left -1px
            right -1px
            bottom -1px

.label
    display flex
    cursor pointer
    justify-content space-between
    align-items center
    flex 1 0

.delivery-info
    display flex
    flex-direction column

.label-title
    font-size 1.6rem

.label-desc
    font-size 0.8rem

.delivery-price
    font-size 1.6rem
    margin-right 1.2rem

    &::before
        content "NT. "
        font-size 1rem
        