@import '../../colors'

.summary, .delivery, .total
    display flex
    justify-content space-between
    margin 0 3.2rem

.summary, .delivery
    margin-bottom 0.8rem

.delivery
    padding-bottom 0.8rem
    border-bottom 1px solid $ctaBorder

.title 
    font-size 1.4rem
    
.summary-amount, .delivery-amount
    &::before
        content "NT. "
        font-size 1.2rem
    
    span
        font-size 2rem

.total-title
    font-size 2rem
    font-weight 600

.total-amount
    &::before
        content "NT. "
        font-size 1.8rem
    span
        font-size 3.6rem