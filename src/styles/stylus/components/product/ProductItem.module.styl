.product
    height 46rem
    width 100%

.product-container
    position relative

.featured-carousel
    width 35rem

.product-img
    width 100%
    height 40rem
    background grey

    &:hover, &:active
        &::before
            content: ""
            background-color rgba(225, 225, 225, 0.3)
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            z-index 2

    & img 
        width 100%
        height 100%
        object-fit cover

.product-info
    margin-top 0.8rem
    height 5rem
    text-align center
    
.product-info__price
    letter-spacing 0.8px
    & ::before
        content "NT. "
        