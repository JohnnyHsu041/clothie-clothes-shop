@import '../../colors'

.logo
    cursor pointer

    a
        font-size 4.4rem

.nav-bar
    display flex
    gap 4.8rem
    position relative

.main-nav
    display flex
    gap 3.2rem
    align-items center
    color $nav
    
    div
        cursor pointer
    a
        font-size 1.6rem


.user-nav
    display flex
    gap 2.4rem
    align-items center
    margin-left auto
    color $nav

    div
        cursor pointer

.user-nav__cart
    width 3rem
    height 3rem
    display flex
    justify-content center
    align-items center
    position relative

    & svg
        width 2.4rem
        height 2.4rem
        color #676767

.product-amount-in-cart
    display flex
    justify-content center
    align-items center
    position absolute
    top 100%
    left 100%
    width 2rem
    height 2rem
    font-size 1.6rem
    border-radius 50%
    background-color $primary
    transform translate(-75%, -75%)
    
    p 
        position relative
        top -2px


.user-nav__avatar
    width 3rem
    height 3rem
    background-color #eee
    border-radius 50%
    display flex
    justify-content center
    align-items center

    & svg
        height 2rem
        width 2rem
        color #b3b3b3

.user__options
    position absolute
    width 15rem
    text-align center
    background-color #fcfcfc
    top 100%
    left 100%
    transform translateX(-100%)
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.1)

.option
    display flex
    justify-content center
    align-items center
    height 3.5rem

    button
        font-size 1.4rem 
        color #161616
