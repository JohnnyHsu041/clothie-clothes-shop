@import '../../colors'

.side-drawer
    position absolute
    top 0
    left 50%
    width 50%
    height 120vh
    background rgb(255,255,255)
    z-index 99

    ul 
        list-style none
        font-size 1.6rem
        display flex
        flex-direction column
        gap 1.2rem
        margin-top 1.2rem

        li
            padding 0.4rem 2rem
            border-bottom 1px solid $ctaBorder
            margin 0 0.4rem
