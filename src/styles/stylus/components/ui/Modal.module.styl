@import '../../colors'

.modal
    display flex
    flex-direction column
    background-color white
    width 30rem
    height 15rem
    position absolute
    top 35%
    left 50%
    transform translate(-50%, -50%)
    z-index 3

.modal__header
    text-align center
    border-bottom 1px solid $ctaBorder
    margin 0 3.2rem 1.2rem 3.2rem

.modal__content
    text-align center
    font-size 1.4rem
    margin-bottom 3.2rem

.modal__footer
    text-align center