.footer
    padding 4.8rem 0 1.2rem 0
    border-top 1px solid #f0f0f0
    margin-top 12.8rem

.footer-container
    display grid
    grid-template-columns 40fr 60fr
    padding 0 12.8rem
    margin 0 12.8rem 1.6rem 12.8rem

.logo-nav
    display flex
    flex-direction column

.logo
    font-size 3.6rem
    margin-bottom 1.2rem

.links
    display flex

.icon
    width 3rem
    height 3rem
    filter brightness(0)
    opacity 50%

.footer-nav
    display flex
    justify-content space-evenly

    ul
        list-style none

    p
        font-size 1.8rem
        margin-bottom 2.4rem
        font-weight 500

.contact
    display flex
    flex-direction column
    justify-content space-between
    list-style none

    ul
        font-size 1.2rem
        color #676767

.clothing, .account
    display flex
    flex-direction column
    list-style none
    font-size 1.2rem
    color #676767
    gap 1.6rem

.copyright
    color #d1d1d1
    text-align center
    padding 0 12.8rem
    margin 4.8rem 12.8rem 0 12.8rem